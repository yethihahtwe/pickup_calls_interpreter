{
    "manifest_version" : 3,
    "name": "Auto Answer IMS Calls",
    "version": "1.0",
    "description": "Automatically clicks the 'Click to Answer' button",
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]
}